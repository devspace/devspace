{
  "rules": {
    "signups": {
      ".write": true,
      ".read": false
    },
    "users": {
      ".write": "auth !== null && auth.provider === 'github'",
      ".read": "auth !== null && auth.provider === 'github'",
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },
    "v1": {
      "users": {
        ".read": "auth !== null && auth.provider === 'github'",
        "$uid": {
          ".write": "auth != null && auth.provider === 'github' && auth.uid == $uid"
        }
      },
      "signups": {
        ".write": true,
        ".read": false
      }
    }
  }
}
